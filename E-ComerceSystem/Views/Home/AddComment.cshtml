
@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_OurLayOut.cshtml";
}

<h2 class="text-center  text-capitalize my-3">Add your Comment</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="@Url.Action("AddComment", "Home")" method="post">
                @Html.ValidationSummary(false);;
                <input type="text" value="@ViewBag.CustomerId" name="CustomerId" hidden />
                <input type="hidden" value="@ViewBag.ProductId" name="ProductId" hidden />

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"> Your Comment </label>
                    <input type="text" name="Comment" class="form-control mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label"> Rate From 1 to 10 </label>
                    <input type="number" name="Rate" class="form-control mb-3" id="exampleInputPassword1" min="1" max="10" required>
                </div>

                <button type="submit" class="btn btn-primary mb-3">  Add Comment </button>

            </form>
        </div>
    </div>
</div>

