@{
    ViewBag.Title = "Home Page";
}
@using E_ComerceSystem.ModelView;
@model IEnumerable<ProductModelView>
@{
    Layout = "~/Views/Shared/_OurLayOut.cshtml";

}
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder text-capitalize"> From A to Z  </h1>
            <p class="lead fw-normal text-white-50 mb-0 text-capitalize">welecom to our web site</p>
        </div>
    </div>
</header>

<h1 class="text-capitalize text-center"> Welcome to our web site </h1>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col mb-3">
                    <div class="card ">
                        <img class="card-img-top" src="~/Content/Images/@item.Image" alt="..." height="320px" />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@item.Name</h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item text-center"> @item.price $ </li>
                                <li class="list-group-item text-center"> @item.ProviderName </li>
                                <li class="list-group-item text-center">  @item.CategoryType </li>
                            </ul>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="@Url.Action("Details","Home", new { id = item.ID})"> More Details </a></div>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>

</section>