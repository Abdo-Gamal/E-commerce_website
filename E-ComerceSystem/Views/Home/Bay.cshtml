
@{
    ViewBag.Title = "Bay";
    Layout = "~/Views/Shared/_OurLayOut.cshtml";


}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="@Url.Action("Bay","Home")" method="post">
                @Html.ValidationSummary(false);
                <input name="ProductId" type="number" value="@ViewBag.ProductId" hidden />
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"> Amount </label>
                    <input type="number" name="Amount" class="form-control mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                </div>
                <button type="submit" class="btn btn-primary mb-3"> Add  </button>
                <a href="@Url.Action("Index","Home")" class="btn btn-secondary mb-3"> Cancele  </a>
            </form>
        </div>
    </div>
</div>


